{
  "manifest_version": 3,
  "name": "PDF Bookmarker",
  "version": "1.3",
  "description": "Save, view, and manage multiple bookmarks for PDF files.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "host_permissions": ["*://*/*.pdf"]
}
